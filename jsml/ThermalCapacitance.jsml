component ThermalCapacitance
  n = Node()
  parameter Cp::SpecificHeatCapacity
  parameter T0::Temperature
relations
  # Conservation of energy
  # Sign convention: n.Q is positive when heat is flowing into the component
  # Therefore der(n.T) is positive in that case.
  Cp*der(n.T) = n.Q
  # Set initial temperature to `T0`
  initial der(n.T) = 0
end